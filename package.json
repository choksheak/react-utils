{
  "name": "@choksheak/react-utils",
  "license": "The Unlicense",
  "version": "0.3.6",
  "description": "Miscellaneous React+TypeScript utilities with support for full tree-shaking.",
  "private": false,
  "sideEffects": false,
  "files": [
    "**/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "tsc": "tsc --noEmit --allowSyntheticDefaultImports",
    "ft": "npm run fix && npm run tsc",
    "build": "tsup src/*",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci": "npm run lint && npm run tsc && npm run build && npm run test",
    "ls": "lint-staged",
    "clean": "rm -rf dist",
    "docs": "typedoc && cp -r assets/index.html assets/images docs",
    "gen-types": "tsc --emitDeclarationOnly --declaration",
    "gen-exports": "tsx scripts/gen-exports.ts",
    "bump": "tsx scripts/bump-version.ts",
    "bump:patch": "tsx scripts/bump-version.ts --patch",
    "bump:minor": "tsx scripts/bump-version.ts --minor",
    "bump:major": "tsx scripts/bump-version.ts --major",
    "pkg": "scripts/package.sh",
    "pub": "npm publish dist/ --access=public",
    "commit": "scripts/commit-release.sh",
    "release": "npm run ci && npm run bump && npm i && npm run pkg && npm run pub && npm run commit",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "echo Using `eslint --fix` will revert changes without printing errors!",
      "eslint ."
    ],
    "*.{ts,tsx}": [
      "echo `tsc-files --noEmit` cannot read *.module.css files",
      "npm run tsc"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/choksheak/react-utils.git"
  },
  "keywords": [
    "chok",
    "react",
    "utils",
    "typescript",
    "library"
  ],
  "author": "ChokSheak Lau",
  "type": "commonjs",
  "homepage": "https://github.com/choksheak/react-utils#readme",
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@swc/core": "^1.14.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config": "^0.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "lodash": "^4.17.21",
    "object-sizeof": "^2.6.5",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "use-deep-compare": "^1.3.0",
    "vitest": "^4.0.3",
    "wretch": "^3.0.2"
  },
  "peerDependencies": {
    "@choksheak/ts-utils": ">=0.3.2",
    "lodash": ">=4.17.21",
    "object-sizeof": ">=2.6.5",
    "react": ">=16",
    "use-deep-compare": ">=1.3.0",
    "wretch": ">=3"
  }
}
